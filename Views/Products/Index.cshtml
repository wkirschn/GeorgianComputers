@model IEnumerable<GeorgianComputers.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Display</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-hover sortable">
    <thead class="text-right">
        <tr>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Name)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Category)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Description)</a>
            </th>
            <th>
                <a href="#">@Html.DisplayNameFor(model => model.Price)</a>
            </th>
            <th>
               Actions
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td class="text-right">
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
            <td class="text-right">
                @Html.DisplayFor(modelItem => item.Photo)
            </td>
        </tr>
}
    </tbody>
</table>
